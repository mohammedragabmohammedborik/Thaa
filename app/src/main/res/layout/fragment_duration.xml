<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/back_ground_login_fragment"
    android:layoutDirection="rtl"

    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"

        android:layout_marginLeft="8dp"
        android:background="@color/back_ground_login_fragment"

        app:cardElevation="8dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_color"



            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:background="@color/white_color"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:text="اليوم"
                        android:textColor="@color/black_color"
                        android:textSize="18sp"
                        android:fontFamily="@font/droidkufi_regular"
                        android:layout_marginRight="8dp"

                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="من"
                        android:textColor="@color/black_color"
                        android:textSize="18sp"
                        android:fontFamily="@font/droidkufi_regular"
                        android:layout_marginRight="8dp"

                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="الى"
                        android:textColor="@color/black_color"
                        android:textSize="18sp"
                        android:fontFamily="@font/droidkufi_regular"
                        android:layout_marginRight="8dp"
                        android:layout_height="wrap_content" />





                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/reycycle_course"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    >
                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
            <com.rey.material.widget.Button
                android:id="@+id/add_course"
                android:layout_width="90dp"
                android:text="اضافة  موعد"
                android:textColor="@color/black_color"
                android:textSize="10sp"
                android:fontFamily="@font/droidkufi_regular"
                android:background="@drawable/ripple_login_button"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/teacher_name"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>