<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_ground_login_fragment"
    android:fitsSystemWindows="true"

    android:layoutDirection="rtl">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        >
        <RadioButton
            android:id="@+id/difficult_learning"
            android:layout_width="wrap_content"
            android:text="صعوبات تعلم"
            android:checked="true"
            android:textColor="@color/black_color"
            android:fontFamily="@font/droidkufi_regular"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/speech_disorders"
            android:layout_width="wrap_content"
            android:text="اضطرابات تخاطب"
            android:textColor="@color/black_color"
            android:fontFamily="@font/droidkufi_regular"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        app:cardElevation="8dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        app:cardCornerRadius="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/user_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="@string/user_name"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"


                android:background="@color/white_color"
                android:textColorHint="@color/dark_text_color"
                android:fontFamily="@font/cairo_regular"
                android:textSize="@dimen/edit_text_size"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/dark_text_color"
                android:layout_marginTop="@dimen/secondary_vertical_space"
                />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/age_text"
                android:layout_width="match_parent"
                android:layout_height="148dp"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:layout_gravity="bottom"
                android:hint="التفاصيل"

                android:paddingRight="@dimen/secondary_vertical_space"

                android:gravity="top|right"
                android:background="@drawable/shape_normal_edit_text"
                android:textColorHint="@color/dark_text_color"
                android:fontFamily="@font/cairo_regular"
                android:textSize="@dimen/edit_text_size"
                android:padding="12dp"


                />

                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <com.rey.material.widget.Button
        android:id="@+id/send_free_question"
        android:layout_width="match_parent"
        android:text="ارسال"
        android:textColor="@color/white_color"
        android:textSize="@dimen/edit_text_size"
        android:fontFamily="@font/droidkufi_regular"
        android:background="@drawable/ripple_login_button"


        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/large_vertical"
        android:layout_marginBottom="@dimen/large_vertical"

        />
</LinearLayout>
</androidx.core.widget.NestedScrollView>