<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layoutDirection="rtl"
android:layout_marginTop="16dp"    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/course_name"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:text="الاسم"
        android:textColor="@color/black_color"
        android:textSize="10sp"
        android:fontFamily="@font/droidkufi_regular"
        android:layout_marginRight="8dp"

        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/course_period"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="المدة"
        android:textColor="@color/black_color"
        android:textSize="10sp"
        android:fontFamily="@font/droidkufi_regular"
        android:layout_marginRight="8dp"

        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/course_place"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:text="مكان الأقامة"
        android:textColor="@color/black_color"
        android:textSize="10sp"
        android:fontFamily="@font/droidkufi_regular"
        android:layout_marginRight="8dp"

        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/delete_course"
        android:layout_width="0dp"
        android:layout_weight=".5"
        android:textColor="@color/white_color"
        android:textSize="18sp"
        android:fontFamily="@font/droidkufi_regular"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_close_i"

        android:layout_height="wrap_content" />



</LinearLayout>