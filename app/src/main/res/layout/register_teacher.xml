<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_ground_login_fragment"
    android:fitsSystemWindows="true"

    android:layoutDirection="rtl">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/back_ground_login_fragment"

        android:layoutDirection="rtl">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_color"
            app:cardElevation="8dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >


                <RelativeLayout
                    android:id="@+id/relative_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"

                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="8dp"
                        app:civ_border_color="@color/white_color"
                        app:civ_border_width="1dp"
                        android:layout_marginRight="@dimen/secondary_vertical_space"

                        android:src="@drawable/empty_user" />

                    <!--<com.wang.avi.AVLoadingIndicatorView-->
                    <!--android:id="@+id/avi"-->
                    <!--style="@style/AVLoadingIndicatorView"-->
                    <!--android:layout_width="wrap_content"-->

                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerHorizontal="true"-->
                    <!--android:layout_marginStart="8dp"-->
                    <!--android:layout_marginTop="8dp"-->
                    <!--android:layout_marginEnd="8dp"-->
                    <!--android:visibility="visible"-->
                    <!--app:indicatorColor="@color/progressl"-->
                    <!--app:indicatorName="LineSpinFadeLoaderIndicator"-->
                    <!--app:layout_constraintEnd_toEndOf="parent"-->
                    <!--app:layout_constraintHorizontal_bias="0.498"-->
                    <!--app:layout_constraintStart_toStartOf="parent"-->
                    <!--app:layout_constraintTop_toBottomOf="@+id/profile_image" />-->

                    <com.rey.material.widget.FrameLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="45dp"

                        android:layout_marginLeft="-24dp"
                        android:layout_toRightOf="@+id/profile_image"






                        android:background="@drawable/circle_shape"
                        android:elevation="22dp"

                        >

                        <ImageView
                            android:id="@+id/edit"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_edit_p"


                            />


                    </com.rey.material.widget.FrameLayout>
                </RelativeLayout>


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/user_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint="@string/user_name"
                    android:layout_marginTop="@dimen/activity_vertical_margin"

                    android:background="@color/white_color"
                    android:textColorHint="@color/dark_text_color"
                    android:fontFamily="@font/cairo_regular"
                    android:textSize="@dimen/edit_text_size"
                    android:padding="4dp"


                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="@color/dark_text_color"
                    android:layout_marginTop="@dimen/secondary_vertical_space"
                    />
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/id_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/id_text"
                    android:layout_marginTop="@dimen/activity_vertical_margin"

                    android:background="@color/white_color"
                    android:textColorHint="@color/dark_text_color"
                    android:fontFamily="@font/cairo_regular"
                    android:textSize="@dimen/edit_text_size"
                    android:padding="4dp"


                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="@color/dark_text_color"
                    android:layout_marginTop="@dimen/secondary_vertical_space"
                    />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email_text"
                    android:layout_marginTop="@dimen/activity_vertical_margin"

                    android:background="@color/white_color"
                    android:textColorHint="@color/dark_text_color"
                    android:fontFamily="@font/cairo_regular"
                    android:textSize="@dimen/edit_text_size"
                    android:padding="4dp"


                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="@color/dark_text_color"
                    android:layout_marginTop="@dimen/secondary_vertical_space"
                    />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mobile_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/mobile_text"
                    android:layout_marginTop="@dimen/activity_vertical_margin"

                    android:background="@color/white_color"
                    android:textColorHint="@color/dark_text_color"
                    android:fontFamily="@font/cairo_regular"
                    android:textSize="@dimen/edit_text_size"
                    android:padding="4dp"


                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="@color/dark_text_color"
                    android:layout_marginTop="@dimen/secondary_vertical_space"
                    />
                <TextView
                    android:id="@+id/text_city"
                    android:text="المدينة"
                    android:textSize="@dimen/edit_text_size"
                    android:fontFamily="@font/cairo_regular"
                    android:textColor="@color/dark_text_color"
                    android:padding="4dp"



                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/city_id"


                    android:padding="4dp"



                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="@color/dark_text_color"
                    android:layout_marginTop="@dimen/secondary_vertical_space"
                    />

                <TextView
                    android:id="@+id/text_village"
                    android:text="الحي"
                    android:textSize="@dimen/edit_text_size"
                    android:fontFamily="@font/cairo_regular"
                    android:textColor="@color/dark_text_color"

                    android:padding="4dp"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/village_id"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:padding="4dp"

                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="@color/dark_text_color"
                    android:layout_marginTop="@dimen/secondary_vertical_space"
                    />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pass_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/pass_word"
                    android:background="@color/white_color"
                    android:textColorHint="@color/dark_text_color"
                    android:fontFamily="@font/cairo_regular"
                    android:textSize="@dimen/edit_text_size"
                    android:layout_marginTop="@dimen/activity_vertical_margin"

                    android:padding="4dp"


                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="@color/dark_text_color"
                    android:layout_marginTop="@dimen/secondary_vertical_space"
                    />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/confirm_pass_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="تأكيد كلمة المرور  "
                    android:layout_marginTop="@dimen/activity_vertical_margin"

                    android:background="@color/white_color"
                    android:textColorHint="@color/dark_text_color"
                    android:fontFamily="@font/cairo_regular"
                    android:textSize="@dimen/edit_text_size"
                    android:padding="4dp"

                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="@color/dark_text_color"
                    android:layout_marginTop="@dimen/secondary_vertical_space"
                    />
                <TextView
                    android:id="@+id/specification"
                    android:text="التخصص"
                    android:textSize="@dimen/edit_text_size"
                    android:fontFamily="@font/cairo_regular"
                    android:textColor="@color/dark_text_color"

                    android:padding="4dp"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    >
                    <RadioButton
                        android:id="@+id/difficult_learning"
                        android:layout_width="wrap_content"
                        android:text="صعوبات تعلم"
                        android:checked="true"
                        android:textColor="@color/black_color"
                        android:fontFamily="@font/droidkufi_regular"
                        android:layout_height="wrap_content" />

                    <RadioButton
                        android:id="@+id/speech_disorders"
                        android:layout_width="wrap_content"
                        android:text="اضطرابات تخاطب"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:textColor="@color/black_color"
                        android:fontFamily="@font/droidkufi_regular"
                        android:layout_height="wrap_content" />
                </RadioGroup>







            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <com.rey.material.widget.Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:text="تسجيل الدخول"
            android:textColor="@color/white_color"
            android:textSize="@dimen/edit_text_size"
            android:fontFamily="@font/droidkufi_regular"
            android:background="@drawable/ripple_login_button"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/large_vertical"

            />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>